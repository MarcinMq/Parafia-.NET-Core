@model ParafiaApk.Models.Msza

<h2>Dodaj Mszę</h2>

<form asp-action="DodajMsze" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Data">Data</label>
        <input type="date" id="Data" name="Data" class="form-control" value="@Model?.Data.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="Godzina">Godzina</label>
        <input type="time" id="Godzina" name="Godzina" class="form-control" value="@Model?.Godzina" required />
    </div>
    <div class="form-group">
        <label for="Rodzaj">Rodzaj</label>
        <input type="text" id="Rodzaj" name="Rodzaj" class="form-control" value="@Model?.Rodzaj" required />
    </div>
    <div class="form-group">
        <label for="IdKsiadz">Ksiądz</label>
        <select id="IdKsiadz" name="IdKsiadz" class="form-control">
            <option value="">Wybierz księdza</option>
            @foreach (var ksiadz in ViewBag.Ksieza)
            {
                <option value="@ksiadz.IdKsiadz">@ksiadz.Imie @ksiadz.Nazwisko</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-3">Zapisz</button>
</form>
