@model ParafiaApk.Models.ApplicationUser

@{
    ViewData["Title"] = "Panel Parafianina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        overflow: hidden; /* Disable scrolling */
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg d-flex flex-column justify-content-center" style="width: 60rem; border-radius: 1rem;">
        <div class="card-body d-flex">

            <!-- Informacje o profilu -->
            <div class="w-50 pe-4">
                <h2 class="card-title text-center mb-4">Informacje o profilu</h2>
                <div class="mb-3">
                    <strong>Imię:</strong> @Model.Imie
                </div>
                <div class="mb-3">
                    <strong>Nazwisko:</strong> @Model.Nazwisko
                </div>
                <div class="mb-3">
                    <strong>Email:</strong> @Model.Email
                </div>
                <div class="mb-3">
                    <strong>Telefon:</strong> @Model.PhoneNumber
                </div>
                <div class="mb-4">
                    <strong>Rola:</strong> Parafianin
                </div>
            </div>

            <!-- Akcje -->
            <div class="w-50 ps-4 border-start">
                <h2 class="card-title text-center mb-4">Akcje</h2>
                <div class="d-grid gap-3">
                    <a class="btn btn-primary" asp-controller="Msze" asp-action="Harmonogram">Przeglądaj Msze</a>
                    <a class="btn btn-primary" asp-controller="Intencje" asp-action="ZglosIntencje">Zgłoś Intencję Mszalną</a>
                    <a class="btn btn-primary" asp-controller="Sakramenty" asp-action="ZglosSakrament">Zgłoś Sakrament</a>
                    <a class="btn btn-primary" asp-controller="Ogloszenia" asp-action="Lista">Zobacz Ogłoszenia</a>
                    <a class="btn btn-primary" asp-controller="Sakramenty" asp-action="MojeZgloszenia">Zgłoszone Sakramenty</a>
                    <a class="btn btn-primary" asp-controller="Intencje" asp-action="MojeIntencje">Zgłoszone Intencje</a>
                </div>
            </div>
        </div>
    </div>
</div>
